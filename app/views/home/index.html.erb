<%= form_tag '/home', multipart: true do%>
<div class="row">
    <div class="col-sm-5 text-center ">
        <h3>CSV</h3> 
        <br>
        <%= text_area_tag 'input', nil, class: 'form-control', style: 'width: 100%', rows: 25 %>
        <br>
        <%= file_field_tag "file", class: 'form-control' %>
        <br>
        <div class="form-group">
        <lebel>
            <input type="text" class="form-control" name="apiURL" placeholder="http://trial-api.ex-cloud.biz/v1">
        </lebel>
        </div>
    </div>
     <div class="col-sm-1 text-center" style="display: flex; align-items: center; justify-content: center; flex-direction: column">
     
        <div>
            <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-arrow-right" aria-hidden="true"></i></button>
        </div>
    </div>
    <div class="col-sm-6 text-center">
        <h3>JSON</h3>
        <br/>
        <div>
            <textarea class= "form-control" id="" rows="31" style="width: 100%;"></textarea>
        </div>
         <br/>
    </div>
</div>
<% end %>